{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "module": "NodeNext",
    "target": "es5",
    "lib": [
      "es2021"
    ],
    "outDir": "build",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
