{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "module": "ESNext",
    "target": "es6",
    "lib": [
      "ESNext"
    ],
    "outDir": "build",
    "strict": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts",
    "node_modules/ts-jest/globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}