{
  "name": "my-chat-api",
  "version": "0.0.0",
  "description": "API for basic chat application",
  "main": "src/app.ts",
  "scripts": {
    "start": "tsc --build tsconfig.build.json && node -r ./bootstrap.js build/app.js",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "dev": "nodemon",
    "build": "tsc --build tsconfig.build.json",
    "lint": "eslint \"./src/**/*.{ts,tsx,js,jsx,json}\"",
    "precommit": "lint-staged && npm run lint && npm run tsc",
    "prettier:check": "prettier --config .prettierrc.js \"./src/**/*.{ts,tsx,js,jsx,json}\" --check --ignore-unknown",
    "prettier:write": "prettier --config .prettierrc.js \"./src/**/*.{ts,tsx,js,jsx,json}\" --write --ignore-unknown",
    "test": "mocha -r tsconfig-paths/register -r ts-node/register  \\\"src/tests/**/*.ts\\\" --exit",
    "coverage": "nyc --reporter=html mocha -r tsconfig-paths/register -r ts-node/register  \\\"src/tests/**/*.ts\\\" --exit",
    "coverage:view": "start coverage/index.html",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akturanilyas/my-chat-api.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akturanilyas/my-chat-api/issues"
  },
  "homepage": "https://github.com/akturanilyas/my-chat-api#readme",
  "dependencies": {
    "@types/cors": "^2.8.13",
    "@types/node": "^18.14.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "moment": "^2.29.4",
    "mysql": "^2.18.1",
    "nyc": "^15.1.0",
    "socket.io": "^4.6.0",
    "typeorm": "^0.3.12"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/express": "^4.17.17",
    "@types/mocha": "^10.0.1",
    "@types/node-cron": "^3.0.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "mocha": "^10.2.0",
    "node-cron": "^3.0.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json}": [
      "node_modules/.bin/prettierÂ --write",
      "eslint --fix"
    ]
  }
}
