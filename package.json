{
  "name": "my-chat-api",
  "version": "0.0.0",
  "description": "API for basic chat application",
  "main": "src/app.ts",
  "scripts": {
    "start": "tsc --build tsconfig.build.json && node -r ./bootstrap.js build/app.js",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "dev": "nodemon",
    "typeorm": "typeorm",
    "build": "tsc --build tsconfig.build.json",
    "lint": "eslint \"./src/**/*.{ts,tsx,js,jsx,json}\"",
    "lint:fix": "cd \"./src/\" && eslint . --fix --ext .ts,.tsx,.js && cd ..",
    "precommit": "lint-staged && npm run format && npm run lint:fix && npm run lint && npm run tsc",
    "prettier:check": "prettier --config .prettierrc.js \"./src/**/*.{ts,tsx,js,jsx,json}\" --check --ignore-unknown",
    "prettier:write": "prettier --config .prettierrc.js \"./src/**/*.{ts,tsx,js,jsx,json}\" --write --ignore-unknown",
    "test": "jest",
    "test2": "jest src/tests/*.test.ts ---updateSnapshot --forceExit",
    "coverage": "nyc --reporter=html jest tsconfig-paths/register -r ts-node/register  \\\"src/tests/**/*.ts\\\" --exit",
    "format": "prettier --write \"./src/**/*.{ts,tsx,js,jsx,json}\"",
    "coverage:view": "start coverage/index.html",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/akturanilyas/my-chat-api.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/akturanilyas/my-chat-api/issues"
  },
  "transform": {},
  "homepage": "https://github.com/akturanilyas/my-chat-api#readme",
  "dependencies": {
    "@jest/globals": "^29.5.0",
    "@types/cors": "^2.8.13",
    "@types/node": "^18.14.0",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "esbuild": "^0.17.12",
    "esbuild-jest": "^0.5.0",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "mysql": "^2.18.1",
    "nyc": "^15.1.0",
    "socket.io": "^4.6.0",
    "typeorm": "0.3.7"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/plugin-proposal-decorators": "^7.21.0",
    "@babel/plugin-syntax-decorators": "^7.21.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@curveball/http-errors": "^0.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node-cron": "^3.0.7",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "babel-jest": "^29.5.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "node-cron": "^3.0.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.5"
  },
